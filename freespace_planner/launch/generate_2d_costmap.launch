<launch>

  <node pkg="costmap_2d" type="costmap_2d_node" name="costmap_2d_node">
    <rosparam>
      global_frame: odom
      robot_base_frame: base_link
      footprint: [ [-0.2, -0.15], [-0.2, 0.15], [0.2, 0.15], [0.2, -0.15], [-0.2, -0.15]]

      update_frequency: 30
      rolling_window: true

      width: 10
      height: 10
      resolution: 0.05

      #Max obstacle distance to scan
      obstacle_range: 3.0
      #Trace out freespace this far
      raytrace_range: 5.5

      plugins: 
        - {name: obstacles,        type: "costmap_2d::VoxelLayer"}

      obstacles:
          observation_sources: base_scan
          base_scan: {data_type: LaserScan, sensor_frame: /laser, clearing: true, marking: true, topic: /scan}

    </rosparam>
  </node>
</launch>